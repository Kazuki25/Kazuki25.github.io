<h2>カテゴリー一覧</h2>

<table>
    <thead>
        <tr>
            <th>id</th>
            <th>カテゴリー</th>
        </tr>
    </thead>
    
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to 'カテゴリーを追加する', new_category_path %></p>