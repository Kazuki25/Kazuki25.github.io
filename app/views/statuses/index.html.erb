<h2>進捗状態一覧</h2>

<table>
    <thead>
        <tr>
            <th></th>
            <th>識別コード</th>
            <th>状態</th>
        </tr>
    </thead>
    
    <tbody>
        <% @statuses.each do |status| %>
            <tr>
                <td><%= link_to '編集',edit_status_path(status) %></td>
                <td><%= status.code %></td>
                <td><%= status.phase %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to '状態を追加する', new_status_path %></p>