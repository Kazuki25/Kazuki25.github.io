<h2>タスク一覧</h2>
<table class="responsive">
  <thead>
    <tr>
      <th>タスク番号</th>
      <th>課題番号</th>
      <th>状態</th>
      <th>担当者</th>
      <th>タスク内容</th>
      <th>予定作業時間(h)</th>
      <th>実施予定日</th>
      <th>実績作業時間(h)</th>
      <th>実施日</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.kadai_id %></td>
      <td><%= task.status %></td>
      <td><%= task.do_person %></td>
      <td><%= task.task %></td>
      <td><%= task.plan_hour %></td>
      <td><%= task.due_date %></td>
      <td><%= task.actual_hour %></td>
      <td><%= task.do_date %></td>
      <td class="edit"><%= link_to '更新', edit_task_path(task) %></td>
    </tr>
    <% end %>
  </tbody>
</table>